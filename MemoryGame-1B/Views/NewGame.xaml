<Page x:Class="MemoryGame_1B.Views.NewGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MemoryGame_1B.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewGame">
    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240*"/>
                <ColumnDefinition Width="120*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="120*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid x:Name="Grid" Column="0">

            </Grid>
            <Grid x:Name="Score" Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"></RowDefinition>
                    <RowDefinition Height="60*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Column="1" Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"></RowDefinition>
                        <RowDefinition Height="60*"></RowDefinition>
                        <RowDefinition Height="60*"></RowDefinition>
                        <RowDefinition Height="20*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Column="1"  Row="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="40*"></RowDefinition>
                            <RowDefinition Height="40*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Viewbox HorizontalAlignment="Left" Margin="30 0 0 0" Width="130">
                        <TextBlock Grid.Row="0" >Playername1</TextBlock>
                        </Viewbox>
                        <Viewbox Grid.Row="1" HorizontalAlignment="Left" Margin="30 0 0 0">
                        <TextBlock>score 0</TextBlock>
                        </Viewbox>

                    </Grid>
                    <Grid Column="1"  Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40*"></RowDefinition>
                            <RowDefinition Height="40*"></RowDefinition>
                        </Grid.RowDefinitions>


                        <Viewbox HorizontalAlignment="Left" Margin="30,0,0,0" Width="100"  >
                            <TextBlock FontSize="30" Grid.Row="0" MinWidth="100">Playername2</TextBlock> 
                        </Viewbox>
                        <Viewbox Grid.Row="1" HorizontalAlignment="Left" Margin="30 0 0 0">
                            <TextBlock  FontSize="2" Grid.Row="1" MinWidth="100">score 0</TextBlock>
                        </Viewbox>

                    </Grid>
                </Grid>
                <Grid Column="2" Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60*"></RowDefinition>
                        <RowDefinition Height="60*"></RowDefinition>
                        <RowDefinition Height="60*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Margin="28,10,30,10" Click="Save">Save</Button>
                    <Button Grid.Row="1" Margin="30, 10" Click="ShowMenu">Menu</Button>
                    <Button Grid.Row="2" Margin="30, 10" Click="RestartGame">Restart game</Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
