<Window x:Class="MemoryGame_1B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame_1B"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="120*"></RowDefinition>
                <RowDefinition Height="60*"></RowDefinition>
                <RowDefinition Height="60*"></RowDefinition>
                <RowDefinition Height="60*"></RowDefinition>
                <RowDefinition Height="60*"></RowDefinition>
                <RowDefinition Height="60*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Row="0">
                <TextBlock  FontSize="32" TextAlignment="Center" VerticalAlignment="Center">Memory Game</TextBlock>
            </Grid>
            <Grid Row="1">
                <Button Margin="30, 10">New Game</Button>
            </Grid>
            <Grid Row="2">
                <Button Margin="30, 10">Load Game</Button>
            </Grid>
            <Grid Row="3">
                <Button Margin="30, 10">HighScores</Button>
            </Grid>
            <Grid Row="4">
                <Button Margin="30, 10">Help</Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
